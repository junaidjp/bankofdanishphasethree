<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   
    
    
    
  	<class name="com.bank.entity.Account" table="accountinfo" lazy="false">
	
  	    <meta attribute="class-description">
         This class contains the Account records. 
      </meta>
      <id name="accountid" type="int" column="accountid">
         <generator class="native"/>
      </id>
      
      <property name="accountno" column="accountNo" type="string">
       </property>
  	    
       <property name="accountType" column="accountType" type="string">
       </property>
       
        <property name="balance" column="balance">
       </property>
      
        	
      <property name="accountHolderName">
          <column name="customername" />
          
      </property>
        
        
  	    	
</class>
</hibernate-mapping>